@model BLOG.Yeni.Models.Category

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CategoryAdd</title>
</head>
<body>

    <h4>Category</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CategoryAdd" asp-controller="Admin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="font-family:Verdana;font-size:15px;">
                    <label asp-for="Category_Name" class="control-label"></label>
                    <input asp-for="Category_Name" class="form-control" style="align:'center';width:20%;border:2px solid DeepSkyBlue;border-radius: 4px;display:flex;justify-content:center;" />
                    <span asp-validation-for="Category_Name" class="text-danger"></span></br>
                </div>

                <div class="form-group" style="font-family:Verdana;font-size:15px;">
                    <label asp-for="Category_id" class="control-label"></label>
                    <input asp-for="Category_id" class="form-control" style="align:'center';width:20%;border:2px solid DeepSkyBlue;border-radius: 4px;display:flex;justify-content:center;" />
                    <span asp-validation-for="Category_id" class="text-danger"></span></br>
                </div>
                <div class="form-group" style="font-family:Verdana;font-size:15px;">
                    <input type="submit" value="Create" class="btn btn-primary" /></br>
                </div>
            </form>
        </div>
    </div>

    <div>
        </br> <a asp-action="listeleverileri">Back to HomePage</a>
    </div>

</body>
</html>
