@model BLOG.Yeni.Models.Category

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="_id" class="control-label"></label>
                <input asp-for="Category_Name" value="@Model._id" class="form-control" />
                <span asp-validation-for="Category_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category_Name" class="control-label"></label>
                <input asp-for="Category_Name" value="@Model.Category_Name" class="form-control" />
                <span asp-validation-for="Category_Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category_id" class="control-label"></label>
                <input asp-for="Category_id" value="@Model.Category_id" class="form-control" />
                <span asp-validation-for="Category_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopCategory" class="control-label"></label>
                <input asp-for="TopCategory" value="@Model.TopCategory" class="form-control" />
                <span asp-validation-for="TopCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



</body>
</html>
